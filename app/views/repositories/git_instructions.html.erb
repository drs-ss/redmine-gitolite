<%# This is used to display basic git setup instructions, like on github... %>
<% flash.now[:error] = l(:error_git_repository_does_not_exist) %>
<div class="box">

  <h2><%= l(:label_git_setup) %> :</h2>
  <pre>
    <a href="http://git-scm.com/download" target="_blank"><%= l(:label_download_and_install_git) %></a>
    git config --global user.name "<%= User.current.login %>"
    git config --global user.email <%= User.current.mail %>
  </pre>

  <h2><%= l(:label_git_permission_setup) %> :</h2>
  <pre>
    <%= link_to l(:label_upload_ssh_public_key), {:controller => 'gitolite_public_keys', :action => 'new'} %>
    <%= l(:label_add_yourself_as_developer) %>: <%= link_to @project.name + " #{l(:label_settings)}", {:controller => 'projects', :action => 'settings'} %> -&gt; <%= l(:label_member_plural) %>Tab -&gt; <%= l(:label_member_new) %>
  </pre>

  <h2><%= l(:label_repository_setup) %> :</h2>
  <pre>
    mkdir <%= @repository.identifier %>
    cd <%= @repository.identifier %>
    git init
    git add .
    git commit -m '<%= l(:label_initializing_repository) %> <%= @project.identifier %>'
    git remote add origin <%= @repository.gitolite_git_url %>
    git push -u origin master
  </pre>

  <h2><%= l(:label_checkin_existing_git_repo) %> :</h2>
  <pre>
    cd existing_git_repo
    git remote add origin <%= @repository.gitolite_git_url %>
    git push -u origin master
  </pre>

</div>

<% if @repositories.size > 1 %>
  <% content_for :sidebar do %>
    <h3><%= l(:label_repository_plural) %></h3>
    <p>
      <%= @repositories.sort.collect {|repo|
          link_to h(repo.name),
                  {:controller => 'repositories', :action => 'show',
                   :id => @project, :repository_id => repo.identifier_param, :rev => nil, :path => nil},
                  :class => 'repository' + (repo == @repository ? ' selected' : '')
        }.join('<br />').html_safe %>
    </p>
  <% end %>
<% end %>
